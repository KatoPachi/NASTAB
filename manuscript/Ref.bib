@Article{Sheremeta2020,
  author    = {Sheremeta, Roman M. and Uler, Neslihan},
  journal   = {Experimental Economics},
  title     = {The impact of taxes and wasteful government spending on giving},
  year      = {2020},
  issn      = {1386-4157},
  abstract  = {{We examine how taxes impact charitable giving and how this relationship
   is affected by the degree of wasteful government spending. In our model,
   individuals make donations to charities knowing that the government
   collects a flat-rate tax on income (net of charitable donations) and
   redistributes part of the tax revenue. The rest of the tax revenue is
   wasted. The model predicts that a higher tax rate increases charitable
   donations. Surprisingly, the model shows that a higher degree of waste
   decreases donations (when the elasticity of marginal utility with
   respect to consumption is high enough). We test the model's predictions
   using a laboratory experiment with actual donations to charities and
   find that the tax rate has an insignificant effect on giving. The degree
   of waste, however, has a large, negative and highly significant effect
   on giving.}},
  doi       = {10.1007/s10683-020-09673-9},
  eissn     = {{1573-6938}},
  keywords  = {{Charitable giving; Tax; Waste; Redistribution; Experiment; Public goods provision; Neutrality; Income inequality}},
  language  = {{English}},
